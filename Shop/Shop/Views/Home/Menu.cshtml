@model List<Models.ViewModel.CategoryViewModel>
<nav id="navigation">
    <!-- container -->
    <div class="container">
        <!-- responsive-nav -->
        <div id="responsive-nav">
            <!-- NAV -->
            <ul class="main-nav nav navbar-nav">
                <li class="active"><a href="/">Home</a></li>
                @foreach (var item in Model)
                {
                    <li>
                        <a href="/san-pham/@item.Name-@item.CategoryID">@item.Name</a>

                    </li>
                }
            </ul>
            <!-- /NAV -->
        </div>
        <!-- /responsive-nav -->
    </div>
    <!-- /container -->
</nav>
