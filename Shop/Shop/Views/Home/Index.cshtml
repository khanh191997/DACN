<!-- SECTION -->
<div class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">

            <!-- section title -->
            <div class="col-md-12">
                <div class="section-title">
                    <h3 class="title">Sản phẩm mới</h3>
                    @{Html.RenderAction("ListCate", "Home");}
                </div>
            </div>
            <!-- /section title -->
            <!-- Products tab & slick -->
            @{Html.RenderAction("ListNewProduct", "Home");}
            <!-- Products tab & slick -->
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /SECTION -->
